{{!
    @template block_accessibility_overview/block_content

    Displays the content of the block.

    Example context (json):
    {
        "sections": [
            {
                "title": "Accessibility Overview",
                "entries": [
                    {
                        "label": "starterblockenabled",
                        "value": "Enabled",
                        "hasvalue": true
                    }
                ]
            }
        ],
        "socials": [
            {
                "name": "twitter",
                "url": "https://twitter.com/moodle",
                "icon": "some icon html"
            }
        ]
    }
}}

<section class="block_accessibility_overview">
    {{#sections}}
    <div class="mt-3 block_accessibility_overview_section">
        <div class="px-2 block_accessibility_overview_tab">
            <h6>{{title}}</h6>
        </div>
        {{#entries}}
        <div class="block_accessibility_overview_entry">
            <div class="p-1 {{#hasvalue}}block_accessibility_overview_border_right{{/hasvalue}}">{{{label}}}</div>
            {{#hasvalue}}<div class="p-1">{{{value}}}</div>{{/hasvalue}}
        </div>
        {{/entries}}
    </div>
    {{/sections}}
    <div class="mt-4 block_accessibility_overview_socials">
        {{#socials}}
        <a href="{{url}}" title="{{name}}" aria-label="{{name}}"><span class="{{icon}}"></span></a>
        {{/socials}}
    </div>
</section>
